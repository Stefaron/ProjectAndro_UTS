<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <size
        android:width="30dp"
        android:height="60dp" />

    <!-- Corner radius -->
    <corners  android:topLeftRadius="60dp" />

    <padding
        android:left="20dp"
        android:top="200dp"
        android:right="0dp"
        android:bottom="0dp" />

    <!-- Background gradient -->
    <solid android:color="@color/white" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

</shape>